<!DOCTYPE html>
<html>
	<head>
		<title>Mini projet Equipe de personnes</title>
		<meta charset="utf-8">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous"/>


		<style>
			.divListUser,
			.divUser {
				background-color: #ccc;
				padding: 20px;
				border-radius: 20px
			}
			.divListUser {
				margin-top: 20px;
				border-radius: 20px
			}

			.divTeam {
				background-color: #ccc;
				padding: 20px;
				border-radius: 20px
			}
			#tabListUser td {
				height: 45px;
				width: 120px;
			}
		</style>
	</head>
	<body>
		<div class="container mt-3">

			<div class="row">
				<div class="col-md-8">
					<div class="divTeam">
						{{ form_start(formEquipe,{action : path('equipe_ajouter')})   }}
						<div class="row">

							<div class="col-4">

								{{ form_widget(formEquipe.nom)}}


							</div>
							<div class="col-8">

								<button class="btn btn-success" type="submit">
									<i class="fa fa-plus"></i>
								</button>

							</div>

						</div>
						{{ form_end(formEquipe)}}


					</div>
					<div id="demo">
						{% for e in equipes %}
							<table class="table table-striped my-4">
								<tbody>
									<tr>
										<td colspan="3">
											<h3>
												{{ e.nom }}
												<a class="btn btn-danger" href="{{ path('equipe_enlever',{equipe: e.id})}}">
													<i class="fa fa-trash"></i>
												</a>
											</h3>
										</td>

									</tr>

									<tr>
										<th>Pr√©nom</th>
										<th>Nom</th>
										<th>Action</th>
									</tr>
									{% for p in e.personnes %}
										<tr>
											<td>{{ p.prenom}}</td>
											<td>{{ p.nom}}</td>
											<td>
												<a class="btn btn-danger"
								href="{{ path('personne_equipe_enlever',{personne: p.id,equipe: e.id})}}">
													<i class="fa fa-trash"></i>
												</a>
											</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						{% endfor %}

					</div>
				</div>
				<div class="col-md-4">
					<div class="divUser">
						{{ form_start(formPersonne,{action : path('personne_ajouter')})}}
						{{ form_widget(formPersonne)}}

						<div class="form-group text-center mb-0">
							<button class="btn btn-success btn-lg " type="submit">
								<i class="fa fa-plus"></i>
							</button>
						</div>
						{{ form_end(formPersonne)}}

					</div>


					<div class="divListUser">

						<table class="table">
							{% for p in personnes %}
								<tr>
									<td>{{ p.prenom }}</td>
									<td>{{ p.nom }}</td>
									<td>
										<a class="btn btn-danger" href="{{ path('personne_enlever',{personne: p.id})}}">
											<i class="fa fa-trash"></i>
										</a>
									</td>
								</tr>
							{% endfor %}
						</table>
					</div>

				</div>
				<!-- col4 -->
			</div>
			<!-- row -->

		</div>
		<!-- container -->

	</body>
</html>
